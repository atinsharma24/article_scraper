# Laravel backend API base URL
# Local: http://localhost:8000
# Production: https://your-app.onrender.com
API_BASE_URL=http://localhost:8000

# SerpAPI key for Google search results
# Get one from: https://serpapi.com/
SERPAPI_API_KEY=your_serpapi_key_here

# OpenAI API key for LLM rewriting
# Get one from: https://platform.openai.com/api-keys
LLM_API_KEY=your_openai_api_key_here

# Optional: LLM model to use (defaults to gpt-4o-mini)
LLM_MODEL=gpt-4o-mini

# Optional: Maximum characters to send from each competitor article (defaults to 20000)
MAX_COMPETITOR_CHARS=20000

# Optional: Number of articles to seed (used by seed-originals script)
SEED_COUNT=5
